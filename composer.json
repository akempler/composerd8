{
	"name" : "akempler/composerd8",
	"description" : "Project template for Drupal 8 projects with composer",
	"type" : "project",
	"license" : "GPL-2.0+",
	"authors" : [{
			"name" : "adam kempler"
		}
	],
	"repositories" : [{
			"type" : "composer",
			"url" : "https://packages.drupal.org/8"
		}
	],
	"require" : {
		"composer/installers" : "^1.2.0",
		"drupal-composer/drupal-scaffold" : "^2.2.0",
		"cweagans/composer-patches" : "~1.6",
		"drupal/core" : "~8.6@beta",
		"drupal/admin_toolbar" : "^1.24",
		"drupal/devel" : "~1.2",
		"drupal/token" : "~1.3",
		"drupal/pathauto" : "~1.2",
		"drupal/panels" : "4.3",
		"drupal/page_manager" : "4.0@beta",
    "drupal/entity_reference_revisions" : "^1.5",
    "drupal/paragraphs" : "^1.3"
	},
	"require-dev" : {
		"behat/mink" : "~1.7",
		"behat/mink-goutte-driver" : "~1.2",
		"jcalderonzumba/gastonjs" : "~1.1.0",
		"jcalderonzumba/mink-phantomjs-driver" : "~0.3.2",
		"mikey179/vfsStream" : "~1.6",
		"phpunit/phpunit" : "~5.7.9",
		"symfony/css-selector" : "~3.2.2",
        "guzzlehttp/guzzle" : "~6.2.2"
	},
	"conflict" : {
		"drupal/drupal" : "*"
	},
	"minimum-stability" : "dev",
	"prefer-stable" : true,
	"autoload" : {
		"classmap" : [
			"scripts/composer/ScriptHandler.php"
		]
	},
	"scripts": {
      "drupal-scaffold": "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
      "post-install-cmd": [
          "DrupalProject\\composer\\ScriptHandler::buildScaffold",
          "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
      ],
      "post-update-cmd": [
          "DrupalProject\\composer\\ScriptHandler::buildScaffold",
          "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
      ],
      "post-create-project-cmd": "sh scripts/composer/install.sh"
	},
	"extra" : {
		"installer-paths" : {
			"drupal/core" : [
				"type:drupal-core"
			],
			"drupal/libraries/{$name}" : [
				"type:drupal-library"
			],
			"drupal/modules/contrib/{$name}" : [
				"type:drupal-module"
			],
			"drupal/profiles/contrib/{$name}" : [
				"type:drupal-profile"
			],
			"drupal/themes/contrib/{$name}" : [
				"type:drupal-theme"
			],
			"drush/contrib/{$name}" : [
				"type:drupal-drush"
			]
		}
	}
}