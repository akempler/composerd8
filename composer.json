{
	"name" : "akempler/composerd8",
	"description" : "Project template for Drupal 8 projects with composer",
	"type" : "project",
	"license" : "GPL-2.0+",
	"authors" : [{
			"name" : "adam kempler"
		}
	],
	"repositories" : [
		{
			"type" : "composer",
			"url" : "https://packages.drupal.org/8"
		},
		{
			"type"    : "package",
			"package" : {
				"name"    : "enyo/dropzone",
				"version" : "dev-master",
				"type"    : "drupal-library",
				"source"  : {
					"url"       : "https://github.com/enyo/dropzone.git",
					"type"      : "git",
					"reference" : "master"
				}
			}
		}
	],
	"require" : {
		"composer/installers" : "^1.4",
		"drupal-composer/drupal-scaffold" : "^2.3",
		"cweagans/composer-patches" : "^1.6",
		"drupal/console": "~1.0",
		"drupal/core" : "~8.4",
		"webflo/drupal-finder": "^1.0",
		"webmozart/path-util": "^2.3",
		"drupal/admin_toolbar" : "^1.2",
		"drupal/devel" : "^1.2",
		"drupal/token" : "^1.0",
		"drupal/pathauto" : "^1.0",
		"drupal/restui" : "^1.1",
		"drupal/panels" : "^4.2",
		"drupal/page_manager" : "^4.0@beta",
		"drupal/panelizer" : "^4.0",
		"drupal/paragraphs" : "~1.2",
		"drupal/field_group": "~1.0@RC",
		"drupal/media_entity": "~1.6",
		"drupal/media_entity_image": "^1.2",
		"drupal/media_entity_document": "^1.1",
        "drupal/entity_browser": "^1.3",
		"drupal/embed": "^1.0",
        "drupal/entity_embed": "^1.0",
		"drupal/dropzonejs": "^1.0@alpha",
        "drupal/ds": "^3.1"
	},
	"require-dev" : {
		"behat/mink" : "~1.7",
		"behat/mink-goutte-driver" : "~1.2",
		"jcalderonzumba/gastonjs" : "~1.0.3",
		"jcalderonzumba/mink-phantomjs-driver" : "~0.3.2",
		"mikey179/vfsStream" : "~1.6",
		"phpunit/phpunit" : "~6.4",
		"symfony/css-selector" : "~3.3",
        "guzzlehttp/guzzle" : "~6.3",
        "hirak/prestissimo" : "~0.3"
	},
	"conflict" : {
		"drupal/drupal" : "*"
	},
	"minimum-stability" : "dev",
	"prefer-stable" : true,
	"autoload" : {
		"classmap" : [
			"scripts/composer/ScriptHandler.php"
		]
	},
	"scripts": {
      "drupal-scaffold": "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
      "post-install-cmd": [
          "DrupalProject\\composer\\ScriptHandler::buildScaffold",
          "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
      ],
      "post-update-cmd": [
          "DrupalProject\\composer\\ScriptHandler::buildScaffold",
          "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
      ],
      "post-create-project-cmd": "sh scripts/composer/install.sh"
	},
	"extra" : {
		"installer-paths" : {
			"web/core" : [
				"type:drupal-core"
			],
			"web/libraries/{$name}" : [
				"type:drupal-library"
			],
			"web/modules/contrib/{$name}" : [
				"type:drupal-module"
			],
			"web/profiles/contrib/{$name}" : [
				"type:drupal-profile"
			],
			"web/themes/contrib/{$name}" : [
				"type:drupal-theme"
			],
			"drush/contrib/{$name}" : [
				"type:drupal-drush"
			]
		}
	}
}