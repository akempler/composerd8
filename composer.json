{
	"name" : "akempler/composerd8",
	"description" : "Project template for Drupal 8 projects with composer",
	"type" : "project",
	"license" : "GPL-2.0+",
	"authors" : [{
			"name" : "adam kempler"
		}
	],
	"repositories" : [
		{
			"type" : "composer",
			"url" : "https://packages.drupal.org/8"
		},
		{
			"type"    : "package",
			"package" : {
				"name"    : "enyo/dropzone",
				"version" : "dev-master",
				"type"    : "drupal-library",
				"source"  : {
					"url"       : "https://github.com/enyo/dropzone.git",
					"type"      : "git",
					"reference" : "master"
				}
			}
		}
	],
	"require" : {
		"composer/installers" : "^1.2",
		"drupal-composer/drupal-scaffold" : "^2.5",
		"cweagans/composer-patches" : "^1.6.5",
		"drupal/console": "~1.8",
		"drupal/core" : "~8.5.6",
		"drush/drush": "^9.0.0",
		"vlucas/phpdotenv": "^2.4",
		"webflo/drupal-finder": "^1.1",
		"webmozart/path-util": "^2.3",
		"drupal/admin_toolbar" : "^1.2",
		"drupal/devel" : "^1.2",
		"drupal/token" : "^1.3",
		"drupal/pathauto" : "^1.2",
		"drupal/restui" : "^1.1",
		"drupal/panels" : "^4.3",
		"drupal/page_manager" : "^4.0@beta",
		"drupal/entity_reference_revisions" : "~1.5",
		"drupal/paragraphs" : "~1.3",
		"drupal/field_group": "~3.0@beta",
    "drupal/entity_browser": "^2.0@alpha",
		"drupal/embed": "^1.0",
    "drupal/entity_embed": "^1.0@beta",
		"drupal/dropzonejs": "^2.0@alpha",
		"drupal/twig_tweak": "^2.1"
	},
	"require-dev" : {
		"behat/mink" : "~1.7",
		"behat/mink-goutte-driver" : "~1.2",
		"jcalderonzumba/gastonjs" : "~1.2",
		"jcalderonzumba/mink-phantomjs-driver" : "~0.3.3",
		"mikey179/vfsStream" : "~1.6",
		"phpunit/phpunit" : "~7.3",
		"symfony/css-selector" : "~3.4",
    "guzzlehttp/guzzle" : "~6.3",
    "hirak/prestissimo" : "~0.3"
	},
	"conflict" : {
		"drupal/drupal" : "*"
	},
	"minimum-stability" : "dev",
	"prefer-stable" : true,
	"config": {
			"sort-packages": true
	},
	"autoload" : {
		"classmap" : [
			"scripts/composer/ScriptHandler.php"
		],
		"files": ["load.environment.php"]
	},
	"scripts": {
		"pre-install-cmd": [
				"DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
		],
		"pre-update-cmd": [
				"DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
		],
		"post-install-cmd": [
				"DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
		],
		"post-update-cmd": [
				"DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
		]
	},
	"extra" : {
		"patchLevel": {
			"drupal/core": "-p2"
		},
		"installer-paths" : {
			"web/core" : [
				"type:drupal-core"
			],
			"web/libraries/{$name}" : [
				"type:drupal-library"
			],
			"web/modules/contrib/{$name}" : [
				"type:drupal-module"
			],
			"web/profiles/contrib/{$name}" : [
				"type:drupal-profile"
			],
			"web/themes/contrib/{$name}" : [
				"type:drupal-theme"
			],
			"drush/Commands/{$name}" : [
				"type:drupal-drush"
			]
		},
		"drupal-scaffold": {
				"initial": {
						".editorconfig": "../.editorconfig",
						".gitattributes": "../.gitattributes"
				}
		}
	}
}